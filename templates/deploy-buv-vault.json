{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "lawResourceId": {
            "type": "string",
            "metadata": {
                "description": "The resource id of the Log Analytics Workspace"
            }
        },
        "tags": {
            "type": "object",
            "metadata": {
                "description": "The tags that will be associated to the resources"
            },
            "defaultValue": {
                "environment": "lab"
            }
        },
        "uniqueData": {
            "type": "string",
            "metadata": {
                "description": "Data used to append to resources to ensure uniqueness"
            },
            "defaultValue": "[substring(newGuid(),0,8)]"
        }
    },
    "variables": {
        "diagnosticApiVersion": "2017-05-01-preview",
        "buVltApiVersion": "2022-05-01",
        "location": "[resourceGroup().location]",
        "storageType": "GeoRedundant", 
        "vaultName": "[concat('buvlt',parameters('uniqueData'))]"
    },
    "resources": [
        {
            "name": "[variables('vaultName')]",
            "type": "Microsoft.DataProtection/BackupVaults",
            "apiVersion": "[variables('buVltApiVersion')]",
            "location": "[variables('location')]",
            "tags": "[parameters('tags')]",
            "sku": {
                "name": "RS0",
                "tier": "Standard"
            },
            "identity": {
                "type": "SystemAssigned"
            },
            "properties": {
                "monitoringSettings": {
                    "azureMonitorAlertSettings": {
                        "alertsForAllJobFailures": "Enabled"
                    }
                },
                "storageSettings": [
                    {
                        "datastoreType": "VaultStore",
                        "type": "[variables('storageType')]"
                    }
                ]
            }
        },
        {
            "name": "[concat(variables('vaultName'),'/microsoft.insights/diag')]",
            "type": "Microsoft.DataProtection/BackupVaults/providers/diagnosticSettings",
            "apiVersion": "[variables('diagnosticApiVersion')]",
            "location": "[variables('location')]",
            "tags": "[parameters('tags')]",
            "dependsOn": [
                "[resourceId('Microsoft.DataProtection/BackupVaults', variables('vaultName'))]"
            ],
            "properties": {
                "name": "sendToWorkspace",
                "workspaceId": "[parameters('lawResourceId')]",
                "logs": [
                    {
                        "category": "AzureBackupReport",
                        "enabled": true
                    }
                ],
                "metrics": [
                ]
            },
            "resources": [
            ]
        }
    ],
    "outputs": {
        "buVaultName": {
            "type": "string",
            "value": "[variables('vaultName')]"
        },
        "buVaultResourceId": {
            "type": "string",
            "value": "[resourceId('Microsoft.DataProtection/BackupVaults',variables('vaultName'))]"
        }
    }
}